<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEventos.Views.ResumoEvento"
             BackgroundColor="LightBlue">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Título em destaque -->
        <Label Text="Resumo do Evento"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Conteúdo em destaque com borda -->
        <Frame BackgroundColor="White"
               CornerRadius="10"
               Padding="15"
               HasShadow="True">

            <VerticalStackLayout Spacing="10">

                <!-- Nome do Evento -->
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Nome do Evento: " FontAttributes="Bold" />
                            <Span Text="{Binding Nome}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- Local do Evento -->
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Local do Evento: " FontAttributes="Bold" />
                            <Span Text="{Binding Local}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <BoxView HeightRequest="1" Color="LightGray" Margin="0,5" />

                <!-- Datas -->
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Início: " FontAttributes="Bold" />
                            <Span Text="{Binding DataInicio, StringFormat='{0:dd/MM/yyyy}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Término: " FontAttributes="Bold" />
                            <Span Text="{Binding DataTermino, StringFormat='{0:dd/MM/yyyy}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Duração: " FontAttributes="Bold" />
                            <Span Text="{Binding DuracaoDias}" />
                            <Span Text=" " />
                            <Span Text="{Binding SufixoDuracao}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <BoxView HeightRequest="1" Color="LightGray" Margin="0,5" />

                <!-- Participantes -->
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Participantes: " FontAttributes="Bold" />
                            <Span Text="{Binding NumeroParticipantes}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- Custo por participante -->
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Custo por participante: " FontAttributes="Bold" />
                            <Span Text="{Binding CustoPorParticipante, StringFormat='R$ {0:F2}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

                <!-- Custo total -->
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Custo total: " FontAttributes="Bold" />
                            <Span Text="{Binding CustoTotal, StringFormat='R$ {0:F2}'}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>

            </VerticalStackLayout>
        </Frame>

        <!-- Botões em Grid -->
        <Grid ColumnDefinitions="*,*" Margin="0,20,0,0" ColumnSpacing="20">

            <!-- Botão Voltar à esquerda -->
            <Button Text="Voltar"
                    BackgroundColor="DarkBlue"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="10"
                    Clicked="OnVoltarClicked"
                    Grid.Column="0" />

            <!-- Botão Confirmar à direita -->
            <Button Text="Confirmar Evento"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="8"
                    Padding="10"
                    Clicked="OnConfirmarClicked"
                    Grid.Column="1" />

        </Grid>

    </VerticalStackLayout>
</ContentPage>